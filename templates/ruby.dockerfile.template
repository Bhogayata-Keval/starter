FROM ruby:{{.Version}}

RUN apt-get update -qq && apt-get install -y build-essential nodejs {{.Packages.ToList " "}}

ENV APP_HOME /app
RUN mkdir $APP_HOME
WORKDIR $APP_HOME

ADD Gemfile* $APP_HOME/
RUN bundle install

ADD . $APP_HOME

{{if .Command}
#run the command for this service
CMD {{.Command}}
{{end}}